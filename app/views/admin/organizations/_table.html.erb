<div class="well">
  <h3 class="text-center">Organizations</h3>
  <p>
    <%= link_to 'Create new', new_admin_organization_path, :class => "btn btn-success" %>
  </p>

  <table id="admin-organizations-table" class="table table-striped">
    <thead>
      <th>ID</th>
      <th>Name</th>
      <th>Users</th>
      <th></th>
    </thead>
    <tbody>
      <% @organizations.each do |organization| %>
        <tr>
          <td><%= organization.id %></td>
          <td><%= organization.name %></td>
          <td><%= organization.users.count %></td>
          <td>
            <div class="btn-toolbar">
              <div class="btn-group">
                <%= link_to edit_admin_organization_path(organization), :class => "btn"  do %>
                  <%= content_tag :span, "", :class => "glyphicon glyphicon-pencil" %>
                <% end %>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= javascript_tag do %>

  $(document).ready(function() {
    $("#admin-organizations-table").dataTable({
      "sPaginationType": "bootstrap",
    });
  });

<% end %>
