<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2>Edit Organization</h2>
    <%= form_for([:admin, @organization], method: :patch) do |t| %>
      <div class="form-group">
        <%= t.label :name %>
        <p><%= t.text_field :name, class: "form-control"%></p>
      </div>
      <%= link_to "Cancel", admin_organizations_path, class: "btn btn-primary" %>
      <%= t.submit "Update", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
