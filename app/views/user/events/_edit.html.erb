<%= form_for([:user, @event], remote: true) do |e| %>
        
        <div class="modal-header ">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h2 class="modal-title">Edit Event</h2>
        </div>
        <div class="modal-body form-bg-body">
        <ul class="errors"></ul>
          <%= render 'user/events/fields', e: e %>
              
        </div>
        <div class="modal-footer form-bg-body">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= e.submit "Update", class: "btn btn-primary", id: "update-event-btn" %>
        </div>
      <% end %>