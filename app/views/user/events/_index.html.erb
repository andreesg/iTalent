<div>
  <% current_user.created_events.each do |event| %>
  <div class="well">
    <div>
      <h4>Title <%= event.title %></h4>
      <p><%= event.date_start %></p>
      <ul>
        <% event.tags.each do |tag| %>
          <li class="tag"><%= tag.name %></li>
        <% end %>
      </ul>

    </div>
    <div class="btn-group">
      <%= link_to "eliminar", user_event_path(event), class: "btn btn-default", method: :delete, remote: true %>
      <%= link_to "editar", edit_user_event_path(event), class: "btn btn-default", remote: true %>
    </div>
  </div>

  <% end %>
  <h3> Attending Events </h3>
  <% current_user.event_attendees.each do |event_attendee| %>
  <div class="well">
    <div>
      <h4><%= event_attendee.event.title %></h4>
      <p><%= event_attendee.event.date_start %></p>
      <ul>
        <% event_attendee.event.tags.each do |tag| %>
          <li class="tag"><%= tag.name %></li>
        <% end %>
      </ul>
    </div>
    <div class="btn-group" id="attends-or-not-<%=event_attendee.event.id%>">
      <%= link_to "Cancel", user_event_attendee_path(event_attendee) , class: "btn btn-default", method: :delete, remote: true %>
    </div>
  </div>
  <% end %>

</div>