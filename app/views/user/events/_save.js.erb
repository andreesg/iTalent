$("ul.errors").html("")
<% if @event.errors.any? %>
  <% @event.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $("#event-index").html("<%= escape_javascript(render 'index') %>")
  $("#new-event-modal").modal("hide")
<% end %>