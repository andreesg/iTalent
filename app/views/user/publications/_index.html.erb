<% current_user.created_publications.each do |publication| %>
  <div class="well">
    <div>
      <h4><%= publication.text %></h4>
      <p>published <%= publication.updated_at %></p>
    </div>
    <ul>
      <% publication.tags.each do |tag| %>
        <li class="tag"><%= tag.name %></li>
      <% end %>
    </ul>
    <div>
      <% unless publication.comments.blank? %>
        <h5> Coment√°rios: </h5>
        <% publication.comments.each do |comment| %>
          <p>email: <%= comment.creator.email %></p>
          <p>texto: <%= comment.text %></p>
        <% end %>
      <% end %>
      </br>
      <div class="btn-group">
      <%= link_to "Delete", user_publication_path(publication), class: "btn btn-default", method: :delete, remote: true %>
      <%= link_to "Edit", edit_user_publication_path(publication), class: "btn btn-default", remote: true %>
      </div>
    </div>
  </div>
  </br>
<% end %>
        