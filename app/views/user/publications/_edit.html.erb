<%= form_for([:user, @publication], remote: true) do |f| %>
  <div class="modal-header ">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">Create Publication</h4>
  </div>
  <div class="modal-body form-bg-body">
    <ul class="errors"></ul>
    <%= render 'user/publications/fields', f: f %>         
  </div>
  <div class="modal-footer form-bg-body">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <%= f.submit "Update", class: "btn btn-primary", id: "update-publication-btn" %>
  </div>
<% end %>