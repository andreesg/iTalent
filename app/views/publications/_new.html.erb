



<div class="modal fade" id="new-publication-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      	<%= form_for(@new_publication) do |f| %>

		      <div class="modal-header form-bg">
		        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		        <h4 class="modal-title">Create Publication</h4>
		      </div>
		      <div class="modal-body form-bg-body">
		      		<div >
		      			Post <br>
		      			<%= render 'publications/fields', f: f %>
		      		</div>
		      		<br>
		      			
		      </div>
		      <div class="modal-footer form-bg-body">
		        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		        <button type="button" class="btn btn-primary">Save changes</button>
		        <%= f.submit "Create",:id=>"publication-sbm-button-bot"%>
		      </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


