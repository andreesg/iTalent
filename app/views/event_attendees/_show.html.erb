<% if event.accepting_attendees? %>
  <% if attending = current_user.attending?(event) %>
    <%= link_to "Don't attend", url_for(attending) , class: "btn btn-attend", method: :delete, remote: true %>
  <% else %>
    <%= link_to "Attend", event_attendees_path(event_id: event), class: "btn btn-attend", method: :post, remote: true %>
  <% end %>
<% else %>
  <% if attending = current_user.attending?(event) %>
    <a href="#" class="btn btn-default disabled" role="button">Attending</a>
  <% else %>
    <a href="#" class="btn btn-default disabled" role="button">Not attending</a>
  <% end %>
<% end %>
