<li class="events-content">
  <%= link_to event_path(event) do %>
    <% if event.organization.nil? %>
      <h1>All: <strong><%=event.title%></strong></h1>
    <% else %>
      <h1><%= event.organization.name %>: <strong><%=event.title%></strong></h1>
    <% end %>
    <%= format_date event.date_start %>
    <ul class="tag-container">
      <% event.tags.each do |tag| %>
      	<li><%= tag.name %></li>
      <% end %>
    </ul>
    <div class="event-button">
      <div id="attends-or-not-<%=event.id%>">
        <%= render 'event_attendees/show', :event => event %>
      </div>
      <% if event.accepting_attendees? %>
        <small>Limit: <%= format_date event.date_limit %></small>
      <% end %>
    </div>
  <% end %>
</li>
