
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	<% unless devise_error_messages!.blank? %>
		<div class="alert alert-danger">
			<%= devise_error_messages! %> 
		</div>
	<% end %>
	<div class="chat-bubble">
		<%= image_tag asset_path("logo2.png"), alt: "iTalent" %>

		<div class= "input-boxes">
			<%= f.text_field :name, autofocus: true, placeholder:'name'%>
		</div>		

		<div class= "input-boxes">
			<%= f.email_field :email, autofocus: true, placeholder:'email'%>
		</div>

		<div  class= "input-boxes">
			<%= f.password_field :password, autocomplete: "off", placeholder:'password'%>
		</div>

		<div  class= "input-boxes" >
			<%= f.password_field :password_confirmation, autocomplete: "off", placeholder:'password confirmation' %>
		</div>

		<div  class= "input-boxes" >
			<%= collection_select resource_name, :organization_id, Organization.all, :id, :name, {:include_hidden => false} %>
		</div>
		<br>

		 <div  class= "input-boxes">
		 	<%= f.submit "Sign up" %>
		 </div>
	 	<div  class= "input-boxes">
	 		<%=link_to "Back", new_user_session_path %>	
		</div>
		<div class="chat-bubble-arrow-border">
		</div>
		<div class="chat-bubble-arrow">
		</div>
	</div>
<% end %>

