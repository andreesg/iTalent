<div class="landing-container">
  <div class="row">
      <div class="col-md-4 col-md-offset-4 panel panel-default">

          <h1 class="margin-base-vertical text-center">iTalent</h1>

          <br/>
          <br/>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	          <% unless devise_error_messages!.blank? %>
							<div class="alert alert-danger">
								<%= devise_error_messages! %> 
							</div>
						<% end %>

						<p class="input-group">
              <span class="input-group-addon"><span class="icon-envelope"></span></span>
              <%= f.text_field :name, autofocus: true, class: "form-control input-lg", placeholder: "Nome"  %>
            </p>

            <p class="input-group">
              <span class="input-group-addon"><span class="icon-envelope"></span></span>
              <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "nome@email.com"  %>
            </p>

            <p class="input-group">
              <span class="input-group-addon"><span class="icon-envelope"></span></span>
              <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Password" %>
            </p>

            <p class="input-group">
              <span class="input-group-addon"><span class="icon-envelope"></span></span>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg", placeholder:'password confirmation' %>
            </p>

            <p class="input-group">
            <span class="input-group-addon"><span class="icon-envelope"></span></span>
            	<%= collection_select resource_name, :organization_id, Organization.all, :id, :name, {:include_hidden => false}, class: "form-control input-lg" %>
            </p>
            
            <% if devise_mapping.rememberable? -%>
                <p class="help-block text-center" ><%= f.check_box :remember_me %> <%= f.label :remember_me%></p>
              <% end -%>
            <br/>
            <p class="text-center">
                <%= f.submit "Sign up", class: "btn btn-success btn-lg", id: "btn-sign-in" %>
            </p>
            </span>
          <% end %>

          <%= render "devise/shared/links" %>

      </div>
  </div>
</div>